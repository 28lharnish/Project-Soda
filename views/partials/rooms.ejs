<link rel="stylesheet" href="./public/css/style.css">
<style>
    #chats {
        
    }

    #ui {
        margin-bottom: 20px;
    }


    .room {
        display: flex;
        align-items: center;
        margin: 10px;
    }

    .room-link {
        margin-left: 10px;
        font-size: 1.25rem;
    }

    .room-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }
</style>
 
<div id="ui">
    <button id="create-room-btn" onclick="showModal('createRoom')">Create Room</button>
</div>

<div id="chats">
    <% if (rooms.length === 0) { %>
        <p>You have no rooms</p>
    <% } else { %>
        <% rooms.forEach(room => { %>
            <div class='room'><img class='room-icon' src='<%= room.iconfilename %>'><a class='room-link' href="/?roomid=<%= room.id %>"><%= room.name %></a></div>
        <% }) %>
    <% } %>
</div>