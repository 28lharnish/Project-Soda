<style>
    #chat {

        display: flex;
        flex-direction: column;
        height: 85vh;

    }

    #messages-box {
        background-color: green;
        flex-grow: 1;
        overflow-y: auto;
    }

    #chat-ui {
        width: 100%;
        height: 60px;
        background-color: red;
        align-items: center;
        padding: 10px;
    }

    #message-textbox {
        width: 80%;
        height: 100%;
        padding: 20px;
        resize: none;
        border-radius: 5px;
        font-size: 16px;
    }

    #send-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }
</style>

<div id="chat">
    <% if (!locals?.currentRoom) {%>
        <center>
            <h1>nopers</h1>
        </center>
        <% } else { %>
            <%= currentRoom.members[0].username %>

            <div id="messages-box">
                <% currentRoom.messages.forEach(message => { %>
                    <div>
                        <strong><%= message.sender.username %></strong>
                        <p><%= message.text %></p>
                    </div>
                <% }) %>
            </div>

            <div id="chat-ui">
                <textarea id="message-textbox" resizeable="false"></textarea>
                <button id="send-btn">Send</button>
                <script src="/socket.io/socket.io.min.js"></script>
                <script src="/public/js/chat.js"></script>
            </div>

        <% } %>


</div>